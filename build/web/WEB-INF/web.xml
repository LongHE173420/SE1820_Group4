<?xml version="1.0" encoding="UTF-8"?>
<web-app version="6.0" xmlns="https://jakarta.ee/xml/ns/jakartaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="https://jakarta.ee/xml/ns/jakartaee https://jakarta.ee/xml/ns/jakartaee/web-app_6_0.xsd">
    <servlet>
        <servlet-name>HomePage</servlet-name>
        <servlet-class>controller.HomeControll</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>discountController</servlet-name>
        <servlet-class>controller.discountController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>newsController</servlet-name>
        <servlet-class>controller.newsController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>newsDetailController</servlet-name>
        <servlet-class>controller.newsDetailController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>newsFixController</servlet-name>
        <servlet-class>controller.newsFixController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>newsManageController</servlet-name>
        <servlet-class>controller.newsManageController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>discountDetailController</servlet-name>

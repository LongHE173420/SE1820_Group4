    </servlet>
    <servlet>
        <servlet-name>discountUpdateController</servlet-name>
        <servlet-class>controller.discountUpdateController</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loginController</servlet-name>
        <servlet-class>controller.loginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HomePage</servlet-name>
        <url-pattern>/home</url-pattern>
